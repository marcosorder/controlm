{
  "DeployDescriptor":
  [
    {
      "Property" :"ControlmServer",
      "Assign" : "CTM"
    },
    {
      "Property" :"Application",
      "Replace" : [ {"Sample(.*)" : "P$1"} ]
    },
    {
      "Property" :"RunAs",
      "Replace" : [ {"workbench" : "em900"} ]
    },
    {
      "Property" :"Host",
      "Replace" : [ {"workbench" : "ctm"} ]
    },
    {
      "Property" :"SubApplication",
      "Replace" : [ {"Sample(.*)" : "P$1"} ]
    },
    {
      "ApplyOn"     :  {"Type":"Folder"},
      "Property" : "@",
      "Replace" : [ {"Automation(.*)" : "$1"} ]
    },
    {
      "Property" : "Job:Script.FilePath",
      "Assign" : "/opt/controlm/ctm_agent/ctm/script"
    }
  ]
}